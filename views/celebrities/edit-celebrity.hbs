{{#with celebrity}}

  <h2>{{name}}</h2>

  <form action='/celebrities/{{id}}' method='post'>
    <div style='display:flex; flex-direction:column; width:50%'>

      <label for='name'>Name</label>
      <input type='text' name='name' value='{{name}}' required />
      <br />
      <label for='occupation'>Occupation</label>
      <input type='text' name='occupation' value='{{occupation}}' required />
      <br />
      <label for='catchfrase'>Catchphrase</label>
      <input type='text' name='catchphrase' value='{{catchphrase}}' required />
      <br />
      <br />
      <input type='submit' value='Save Celebrity' />
    </div>

  </form>
{{/with}}